<div class="container">
  <div class="row">
    <h3>登録情報編集</h3>
    <%= form_with model: @customer, url: mypage_path, local: true do |f| %>
	  <table>
        <tbody>
			<tr>
				<td><%= f.label :kanji_familyname, "名前（姓）" %></td>
				<td><%= f.text_field :kanji_familyname, autofocus: true %></td>
				<td><%= f.label :kanji_firstname, " （名）" %></td>
				<td><%= f.text_field :kanji_firstname, autofocus: true %></td>
			</tr>

			<tr>
				<td><%= f.label :kana_familyname, "フリガナ（セイ）" %></td>
				<td><%= f.text_field :kana_familyname, autofocus: true %></td>
				<td><%= f.label :kana_firstname, "（メイ）" %></td>
				<td><%= f.text_field :kana_firstname, autofocus: true %></td>
			</tr>

			<tr>
				<td><%= f.label :email, "メールアドレス" %></td>
				<td><%= f.email_field :email, autofocus: true %><td>
			</tr>

			<tr>
				<td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
				<td><%= f.text_field :postal_code, autofocus: true %></td>
			</tr>

			<tr>
				<td><%= f.label :address, "住所" %></td>
				<td><%= f.text_field :address, autofocus: true %></td>
			</tr>

			<tr>
				<td><%= f.label :telephone_numbere, "電話番号(ハイフンなし)" %></td>
				<td><%= f.text_field :telephone_number, autofocus: true %></td>
			</tr>
		</tbody>
	  </table>

	  <%= f.submit "編集内容を保存する"%><%= link_to "退会する",customers_withdrawal_path, method: :get, class: "btn btn-danger btn-sm" %>
　  <% end %>
	</div>
</div>
<%= render 'shared/footer' %>