<h3>登録情報編集</h3>
  <div class="form-body">
     <%= form_for(@customer) do |f| %>
		<div class="form-group has-icon">
			<label>名前　　　（姓）</label>
			<%= f.text_field :kanji_familyname, autofocus: true%><br>
			<label>（名）</label>
			<%= f.text_field :kanji_firstname, autofocus: true%>
		</div>

		<div class="form-group has-icon">
			<label>フリガナ　　　（セイ）</label>
			<%= f.text_field :kana_familyname, autofocus: true%><br>
			<label>（メイ）</label>
			<%= f.text_field :kana_firstname, autofocus: true%>
		</div>

		<div class="form-group has-icon">
			<label>メールアドレス</label>
			<%= f.text_field :email, autofocus: true%>
		</div>

		<div class="form-group has-icon">
			<label>郵便番号(ハイフンなし)</label>
			<%= f.text_field :postal_code, autofocus: true%>
		</div>

		<div class="form-group has-icon">
			<label>郵便番号(ハイフンなし)</label>
			<%= f.text_field :postal_code, autofocus: true%>
		</div>

		<div class="form-group has-icon">
			<label>住所</label>
			<%= f.text_field :address, autofocus: true%>
		</div>

		<div class="form-group has-icon">
			<label>電話番号(ハイフンなし)</label>
			<%= f.text_field :telephone_number, autofocus: true%>
		</div>

		　<%= f.submit "編集内容を保存する"%>
　  <% end %>
  </div>
<%= link_to "退会する",customers_withdrawal, method: :get, class: "btn btn-danger" %>