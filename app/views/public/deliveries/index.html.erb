<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <h3>配送先登録/一覧</h3>
            <%= form_with(model: @delivery, local: true) do |f| %>
                <div class="postal-code">
                <%= f.label :郵便番号（ハイフンなし） %>
                <%= f.text_field :postal_code, class: 'form-control' %>
                </div>
                <div class="address">
                <%= f.label :住所 %>
                <%= f.text_field :address, class: 'form-control' %>
                </div>
                <div class="form-group">
                <%= f.label :宛名 %>
                <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="text-right">
                <%= f.submit '登録する', class: 'btn btn-success text-right' %>
                </div>
            <% end %>            
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>郵便番号</th>
                        <th>住所</th>
                        <th>宛名</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @deliveries.each do |delivery| %>
                       <tr> 
                            <td><%= delivery.postal_code %></td>
                            <td><%= delivery.address %></td>
                            <td><%= delivery.name %></td>
                            <td>
                                <%= link_to "編集する", edit_delivery_path(delivery.id), class:"btn btn-primary" %>
                                <%= link_to "削除する", delivery_path(delivery.id), method: :delete, class:"btn btn-danger" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>