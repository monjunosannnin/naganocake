<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <h3>新しく住所を登録</h3>
            <%= form_with(model: @delivery, local: true) do |f| %>
                <div class="form-group">
                <%= f.label :郵便番号（ハイフンなし） %>
                <%= f.text_field :postal_code, class: 'form-control' %>
                </div>
                <div class="form-group">
                <%= f.label :住所 %>
                <%= f.text_field :address, class: 'form-control' %>
                </div>
                <div class="form-group">
                <%= f.label :宛名 %>
                <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="action w-25 offset-lg-11">
                <%= f.submit '登録する', class: 'btn btn-danger' %>
                </div>
            <% end %>            
        </div>
    </div>
    <h3>住所一覧</h3>
    <div class="row">
        <div class="col-lg-9">
            <div class="col-lg-3">
                <strong>郵便番号</strong>
            </div>
            <div class="col-lg-3">
                <strong>住所</strong>
            </div>
            <div class="col-lg-3">
                <strong>宛名</strong>
            </div>
        </div>
    </div>
    <% @deliveries.each do |delivery| %>
        <div class="row">
            <div class="col-lg-3">
                <%= delivery.postal_code %>
            </div>
            <div class="col-lg-3">
                <%= delivery.address %>
            </div>
            <div class="col-lg-3">
                <%= delivery.full_name %>
            </div>
            <div class="col-lg-3">
                <%= link_to "編集する", edit_delivery_path(delivery.id), class:"btn btn-danger" %>
                <%= link_to "削除する", delivery_path(delivery.id), method: :delete, class:"btn btn-danger" %>
            </div>
        </div>
    <% end %>
</div>