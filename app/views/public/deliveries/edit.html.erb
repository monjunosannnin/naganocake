<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <h3>配送先編集</h3>
            <%= form_with(model: @delivery, local: true) do |f| %>
                <div class="form-group">
                <%= f.label :郵便番号（ハイフンなし） %>
                <%= f.text_field :postal_code, class: 'form-control' %>
                </div>
                <div class="form-group">
                <%= f.label :住所 %>
                <%= f.text_field :address, class: 'form-control' %>
                </div>
                <div class="form-group">
                <%= f.label :宛名 %>
                <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="action w-25 offset-lg-11">
                <%= f.submit '編集する', class: 'btn btn-danger' %>
                </div>
            <% end %>            
        </div>
    </div>
</div>