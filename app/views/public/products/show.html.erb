<h2>ジャンル検索</h2>
<ul>
	<% @genres.each do |genre| %>
		<li><%= link_to genre.name, products_path(genre_id: genre.id) %></li>
	<% end %>
</ul>

<%# attachment_image_tag product, :image, :fill, 50, 50, size: '50x50' %>
<p><%= @product.name %></p>
<p><%= @product.explanation %></p>
<p>¥<%= (@product.price * 1.1).to_i %>(税込）</p>

<%= form_with(model: [@product, @cart_item], local: true, url: {controller: 'cart_items', action: 'create'}) do |f| %>
<%= f.hidden_field :product_id, value: @product.id %>
<%= f.select :quantity, options_for_select((1..20).to_a), include_blank: "個数選択" %>
<%= f.submit "カートに入れる" %>
<% end %>