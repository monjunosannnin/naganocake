<div class="container">
  <div class="row">
    <div class="col-md-3">  
      <div class="panel panel-default">
        <div class="panel-heading">
          ジャンル検索
		</div>
		<% @genres.each do |genre| %>
		  <div class="panel-body">
		    <%= link_to genre.name, products_path(genre_id: genre.id) %>
		  </div>
		<% end %>
		<div class="panel-footer">
        </div>
      </div>
    </div>
	<div class="col-md-9">
		<h1><%= @name %>一覧</h1>
		<p>全<%= @products.total_count %>件</p>
		<% @products.each do |product| %>
		  <div class="col-xs-3">
		    <div>
				<%# attachment_image_tag product, :image, :fill, 50, 50, size: '50x50' %>
				<%= link_to product.name, product_path(id: product.id, genre_id: @genre.id,) %>
				¥<%= product.price %>
			</div>
		  </div>
		<% end %>
	</div>
	<div class="text-center">
	  <%= paginate @products %>
	</div>
  </div>
</div>