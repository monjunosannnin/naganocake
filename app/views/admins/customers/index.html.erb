<table id="customer_lists">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.kanji_familyname + c.kanji_firstname %></td>
        <td><%= c.email %></td>
        <td>
          <% if c.is_deleted == true %>
            退会済
          <% else %>
            有効
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>