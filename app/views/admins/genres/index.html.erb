<%= form_with model: @genre, url: admins_genres_path, id: "genre_form" do |f| %>
  <%= render "form", genre: @genre, f: f %>

  <div class="actions" id="app_button">
    <%= f.submit "追加" %>
  </div>
<% end %>

<table id="genre_lists">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |g| %>
      <tr>
        <td><%= g.name %></td>
        <td>
          <% if g.is_active == true %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
        <td  id="app_button">
          <%= link_to "編集する", edit_admins_genre_path(g.id), class: "btn btn-default navbar-btn", id: "app_link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>