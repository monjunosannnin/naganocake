<% if request.fullpath == admins_genres_path %>
  <%= form_with model: genre, url: admins_genres_path, class: "genre_form" do |f| %>
    <div class="field">
      <%= f.label :name, "ジャンル" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.check_box :is_active, {:checked => true}, checked_value = "true", unchecked_value = "false" %>
      <%= f.label :is_active, "有効" %>
      <input type="checkbox", value="false", id="passive">
      <label for="passive">無効</label>
    </div>

    <div class="actions">
      <%= f.submit "追加" %>
    </div>
  <% end %>
<% else %>
  <%= form_with model: genre, url: admins_genre_path, class: "genre_form" do |f| %>
    <div class="field">
      <%= f.label :name, "ジャンル" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.check_box :is_active, {:checked => genre.is_active}, checked_value = "true", unchecked_value = "false" %>
      <%= f.label :is_active, "有効" %>
      <% if genre.is_active == true %>
        <input type="checkbox", id="passive">
        <label for="passive">無効</label>
      <% else %>
        <input type="checkbox", id="passive", checked="checked">
        <label for="passive">無効</label>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "変更を保存する" %>
    </div>
  <% end %>
<% end %>

