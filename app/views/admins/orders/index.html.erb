<table id="order_lists">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td>
          <%= link_to admins_order_path(o.customer_id) do %>
            <%= l o.created_at %>
          <% end %>
        </td>
        <td><%= o.customer.kanji_familyname + o.customer.kanji_firstname %></td>
        <td><%= @quantity_total[o.id - 1] %>
        </td>
        <td><%= o.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="paginate_wrapper">
  <%= paginate @orders %>
</div>