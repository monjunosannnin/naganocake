<h1>商品新規登録</h1>
<!-- 商品画像 -->
<div class="form-body">
<%= form_for(@user) do |f| %>
  <div class="form-group has-icon">
    <label>Image</label>
    <div class="user-edit-image">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb"%>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "Image", class: "user-edit-form" %>
  </div>
  <!-- 商品名 -->
  <div class="form-group has-icon">
    <label>商品名</label>
    <%= f.text_field :name, autofocus: true, placeholder:"name"%>
  </div>
  <!-- 商品説明 -->
  <label>商品説明</label>
	  <label class="control-label sr-only" for="inputEmail">Introduction</label>
	      <%= f.text_area :introduction, autofocus: true%>
<!-- 　ジャンル　 -->
<div class="dropdown">
	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
		ドロップダウン
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
		<li role="presentation"><a href="#">リンクのリスト１</a></li>
		<li role="presentation"><a href="#">リンクのリスト２</a></li>
		<li role="presentation"><a href="#">リンクのリスト３</a></li>
	</ul>
</div>
<!-- 税抜価格 -->
  <label>税抜価格</label>
    <%= f.text_field :name, autofocus: true, placeholder:"name"%>
  </div>
<!-- 販売ステータス -->
<div class="dropdown">
	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
		ドロップダウン
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
		<li role="presentation"><a href="#">リンクのリスト１</a></li>
		<li role="presentation"><a href="#">リンクのリスト２</a></li>
		<li role="presentation"><a href="#">リンクのリスト３</a></li>
	</ul>
</div>

<%= f.submit "Update "%>