<h1>商品新規登録</h1>
<!-- 商品画像 -->
<div class="form-body">
<%= form_for(@product) do |f| %>
  <div class="form-group has-icon">
    <div class="user-edit-image">
      <%= attachment_image_tag @product, :image_id, :fill, 100, 100, class: "img-circle pull-left profile-thumb"%>
    </div>
  <!-- 商品名 -->
  <div class="form-group has-icon">
    <label>商品名</label>
    <%= f.text_field :name, autofocus: true, placeholder:"商品名"%>
  </div>
  <!-- 商品説明 -->
  <label>商品説明</label>
	  <label class="control-label sr-only" for="inputEmail"></label>
	      <%= f.text_area :explanation, autofocus: true%>
<!-- 　ジャンル　 -->
<div class="dropdown">
	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
		ジャンル
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
		<li role="presentation"><a href="#">ケーキ</a></li>
		<li role="presentation"><a href="#">プリン</a></li>
		<li role="presentation"><a href="#">焼き菓子</a></li>
		<li role="presentation"><a href="#">キャンディ</a></li>
	</ul>
</div>
<!-- 税抜価格 -->
  <label>税抜価格</label>
    <%= f.text_field :price, autofocus: true%>
  </div>
<!-- 販売ステータス -->
<div class="dropdown">
	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
		販売ステータス
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
		<li role="presentation"><a href="#">販売中</a></li>
		<li role="presentation"><a href="#">品切れ</a></li>
	</ul>
</div>

<%= f.submit '新規登録',class: "btn btn-primary btn-sm" %>
<% end %>