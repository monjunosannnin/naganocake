<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <div class="pull-right">
        <div class="button-container">
          <%= link_to '商品追加', new_admins_product_path, class: 'button'%>
        </div>
      </div>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admins_product_path(product.id)%></td>
            <td><%= product.price %></td>
            <td><%= product.genre.name %></td>
            <td>
              <% if product.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
    </tbody>
    </table>
    <%= paginate @products %>
  </div>
</div>