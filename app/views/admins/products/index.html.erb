<div class="button-container">
  <%= link_to '商品追加', new_admins_product_path, class: 'button'%>
</div>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @products.each do |product| %>
        <td><%= product.id %></td>
        <td><%= link_to product.name, admins_product_path(product.id)%></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td>
          <% if product.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      <% end %>
    </tr>
　<%= paginate @products %>
</tbody>
</table>