<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :kanji_familyname, "名前　　　（姓）" %><br />
    <%= f.kanji_familyname_field :kanji_familyname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :kanji_firstname, "（名）" %><br />
    <%= f.kanji_firstname_field :kanji_firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :kana_familyname, "フリガナ　　　（セイ）" %><br />
    <%= f.kana_familyname_field :kana_familyname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :kana_firstname, "（メイ）" %><br />
    <%= f.kana_firstname_field :kana_firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス　　　" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)　　" %><br />
    <%= f.email_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "住所　　　" %><br />
    <%= f.email_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_numbere, "電話番号(ハイフンなし)　　" %><br />
    <%= f.telephone_number_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら",new_customer_registration%>か
らログインしてください。

