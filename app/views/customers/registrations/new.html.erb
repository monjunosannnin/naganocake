<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "名前（姓）" %><%= f.text_field :kanji_familyname, autofocus: true %>
    <%= f.label :name, "  （名）" %><%= f.text_field :kanji_firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, "フリガ（セイ）" %><%= f.text_field :kana_familyname, autofocus: true %>
    <%= f.label :name, "（メイ）" %><%= f.text_field :kana_firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_numbere, "電話番号(ハイフンなし)" %><%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら",new_customer_session_path %>か
らログインしてください。
</div>
