<div class="function row" >
  <% if request.fullpath == new_admin_session_path %>
    <p class="col-xs-3 col-xs-offset-2">管理者ログイン</p>
  <% elsif request.fullpath == admins_root_path %>
    <p class="col-xs-3 col-xs-offset-2">管理者画面</p>
  <% elsif request.fullpath == edit_admins_genre_path(current_admin.id) %>
    <p class="col-xs-3 col-xs-offset-2">ジャンル編集</p>
  <% elsif request.fullpath == admins_genres_path %>
    <p class="col-xs-3 col-xs-offset-2">ジャンル一覧・追加</p>
  <% elsif request.fullpath == admins_customers_path %>
    <p class="col-xs-3 col-xs-offset-2">会員一覧</p>
  <% elsif request.fullpath == @page %>
    <p class="col-xs-3 col-xs-offset-2">会員一覧</p>
  <% elsif request.fullpath == admins_customer_path %>
    <p class="col-xs-3 col-xs-offset-2"><%= @customer_name %>さんの会員詳細</p>
  <% elsif request.fullpath == edit_admins_customer_path %>
    <p class="col-xs-3 col-xs-offset-2"><%= @customer_name %>さんの会員情報編集
  <% end %>
</div>